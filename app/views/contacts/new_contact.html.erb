<%= form_with(model: @contact, url: contacts_path, local: true) do |form| %>
  <div class="field">
    Name
    <%= form.text_field(:name) %>
  </div>
  <div class="field" id='phone_number'>
    Phone Number
    <%= form.text_field(:phone_number) %>
  </div>
  <div class="field">
    Instagram
    <%= form.text_field(:instagram) %>
  </div>
  <div class="field">
    Address
    <%= form.text_field(:address) %>
  </div>
  <div class="field">
    Notes
    <%= form.text_area :note, rows: 4 %>
  </div>

  <%= form.fields_for :cars do |car_fields| %>
    <%= car_fields.label :make %>
    <%= car_fields.text_field :make %>

    <%= car_fields.label :model %>
    <%= car_fields.text_field :model %>

    <%= car_fields.label :year %>
    <%= car_fields.text_field :year %>

    <%= car_fields.label :trim %>
    <%= car_fields.text_field :trim %>

    <%= car_fields.label :color %>
    <%= car_fields.text_field :color %>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>